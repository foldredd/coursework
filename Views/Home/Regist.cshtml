@using coursework.Models.TriggerModel
@model UserRegist
<head>
    <style>
        .form-wrapper {
            background-color: #f1f1f1;
            padding: 20px;
        }

            .form-wrapper .form-group {
                margin-bottom: 20px;
            }

        .result-error {
            color: red;
        }

        .result-success {
            color: green;
        }

        .custom-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #337ab7;
            color: #fff;
            border-radius: 50px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            border: none;
            outline: none;
            z-index: 9999;
            transition: background-color 0.3s ease;
        }

            .custom-button:hover {
                background-color: #23527c;
            }
    </style>
</head>
<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("index", "Home")" class="custom-button">Повернутися</a>

<p>Заповніть дані</p>
<div>
    <div class="form-wrapper">
        <form method="post">
            <div class="form-group">
                <label for="login">Логін:</label>
                <input type="text" class="form-control" id="login" name="login" required>
            </div>
            <div class="form-group">
                <label for="password">Пароль:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="fio">Ім'я та призвище:</label>
                <input type="text" class="form-control" id="name" name="Name" required>
                <input type="text" class="form-control" id="name" name="Surname" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Відправити</button>
            </div>
        </form>
    </div>
    @if (Model != null)
    {
        <div class="result @(Model.IsRegistered ? "result-success" : "result-error")">
            @Model.Result
        </div>
    }

</div>
